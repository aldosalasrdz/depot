<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="p-1">
    <%= button_to "Remove", line_item, method: :delete, class: "rounded-lg text-sm font-medium py-1 px-2 bg-zinc-300" %>
  </td>
  <td class="p-1 text-right tabular-nums"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="p-1 pr-2"><%= line_item.product.title %></td>
  <td class="p-1 text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
</tr>
