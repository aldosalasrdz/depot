<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <table class="table-auto">
    <% cart.line_items.each do |line_item| %>
      <tr>
        <td class="p-1">
          <%= button_to "Remove", line_item, method: :delete, class: "rounded-lg text-sm font-medium py-1 px-2 bg-zinc-300" %>
        </td>
        <td class="p-1 text-right tabular-nums"><%= line_item.quantity %></td>
        <td>&times;</td>
        <td class="p-1 pr-2"><%= line_item.product.title %></td>
        <td class="p-1 text-right font-bold">
          <%= number_to_currency(line_item.total_price) %>
        </td>
      </tr>
    <% end %>

    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="4">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <div class="flex justify-end mt-4">
    <%= button_to "Empty cart", cart, method: :delete, class: "rounded-lg text-sm font-medium py-1 px-2 text-white bg-green-600" %>
  </div>
</div>
