<%= turbo_frame_tag(dom_id(product)) do %>
  <li class="flex mb-6">
    <%= button_to line_items_path(product_id: product), class: "w-40 h-48 mr-6" do %>
      <%= image_tag(product.image_url, class: "object-contain w-full shadow") %>
    <% end %>

    <div>
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>

      <p>
        <%= sanitize(product.description) %>
      </p>

      <div class="mt-3">
        <%= number_to_currency(product.price) %>

        <%= button_to t(".add_to_cart"),
            line_items_path(product_id: product),
            form_class: "inline",
            class: "ml-4 rounded-lg text-sm font-medium py-1 px-2 text-white bg-green-600"
        %>
      </div>
    </div>
  </li>
<% end %>
